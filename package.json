{
  "name": "diacritics-lv",
  "version": "1.0.0",
  "description": "A collection of utility functions to handle Latvian letters with accents",
  "author": "Dmitrijs Jemeljanovs <dmitrijs@mobilly.lv>",
  "engineStrict": true,
  "engines": {
    "node": ">= 8.9.0"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "test": "jest --no-cache --verbose --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jest": "^19.2.2",
    "husky": "^1.3.1",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run lint && yarn run test"
    }
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": {
        "target": "es6",
        "inlineSourceMap": true
      }
    },
    "transform": {
      ".ts$": "<rootDir>/node_modules/ts-jest/dist/preprocessor.js"
    },
    "cacheDirectory": "./jest-cache",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 75,
        "functions": 75,
        "lines": 75
      }
    }
  }
}
